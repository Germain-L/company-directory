{% extends 'base.html.twig' %}

{% block title %}Company{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <h1>{{ company.name }}</h1>
    <img src="{{ asset(company.imagePath) }}" height="250" alt={{ company.name }}>
    <h3>{{ company.createdAt.format('d/m/Y') }}</h3>
    <p>{{ company.description }}</p>

{% endblock %}
